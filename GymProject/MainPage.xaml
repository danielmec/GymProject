<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymProject.MainPage"
             BackgroundColor="#121212">

    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10">
         <Image Source="logogym.png" WidthRequest="250" HeightRequest="250" />
            <Entry x:Name="EntryEmail" Placeholder="Username" PlaceholderColor="#FFA500" TextColor="White" BackgroundColor="#1E1E1E" WidthRequest="300" HeightRequest="40" Margin="0,0,0,20"/>
            <Entry x:Name="EntryPassword" Placeholder="Password" PlaceholderColor="#FFA500" TextColor="White" BackgroundColor="#1E1E1E" WidthRequest="300" HeightRequest="40" Margin="0,0,0,20" IsPassword="True"/>
            <Button x:Name="LoginButton" Text="Login" BackgroundColor="#FFA500" TextColor="White" WidthRequest="150" HeightRequest="40"/>
            <Button x:Name="RegistraButton" Text="Registrazione" BackgroundColor="#FFA500" TextColor="White" WidthRequest="150" HeightRequest="40" Clicked="OnRegistrationButtonClicked" />
        </StackLayout>
    </ContentPage.Content>

</ContentPage>

